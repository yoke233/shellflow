{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shellflow",
  "version": "0.15.1",
  "identifier": "com.shellflow.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Shellflow",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "app"
    ],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "../themes"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
