{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "One Man Band",
  "version": "0.1.0",
  "identifier": "com.onemanband.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "One Man Band",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "deb", "rpm", "appimage", "nsis"],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/icon.icns",
      "icons/web/icon-192.png",
      "icons/web/icon-512.png",
      "icons/web/favicon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
